{
  "version":8,
  "name": "80s.nyc",
  "pitch": 0,
  "light": {
  "anchor": "viewport",
  "color": "white",
  "intensity": 0.3
  },
  "sprite":"http://80s.nyc/images/atlas",
  "sources": {
    "80snyc": {
      "type": "vector",
      "tiles":["http://files.80s.nyc/tiles/{z}/{x}/{y}.pbf"],
      "minzoom":9,
      "maxzoom":14,
      "attribution":"Â© <a href=\"https://www.openstreetmap.org\" target=\"_blank\"> OpenStreetMap</a> contributors"
    },
    "stories": {
      "type":"geojson",
      "data":{
        "type":"FeatureCollection",
        "features":[]
      }
    },
    "viewPosition": {
      "type":"geojson",
      "data":{
        "type":"FeatureCollection",
        "features":[]
      }
    }
  },
  "glyphs": "http://files.80s.nyc/fonts/{fontstack}/{range}.pbf",
  "transition": {
    "duration": 300,
    "delay": 0
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#22181e"
      }
    },
    {
      "id": "coast",
      "type": "fill",
      "source": "80snyc",
      "source-layer": "coastgeojson",
      "paint": {
        "fill-color": "#040304"
      }
    },
    {
      "id": "parks",
      "type": "line",
      "source": "80snyc",
      "source-layer": "landusagesndjson",
      "paint": {
        "line-color":"black",
        "line-opacity":0.4
      },
      "filter":["in","type","park","pitch"]
    },
    {
      "id": "waterareas",
      "type": "fill",
      "source": "80snyc",
      "source-layer": "waterareasndjson",
      "paint": {
        "fill-color": "#040304"
      }
    },
    {
      "id": "woods",
      "type": "line",
      "source": "80snyc",
      "source-layer": "landusagesndjson",
      "paint": {
        "line-color":"black",
        "line-opacity":0.4
      },
      "filter":["==","type","wood"]
    },
    {
      "id": "cemeteries",
      "type": "line",
      "source": "80snyc",
      "source-layer": "landusagesndjson",
      "paint": {
        "line-color":"black",
        "line-opacity":0.4
      },
      "filter":["==","type","cemetery"]
    },
    {
      "id": "schools",
      "type": "fill",
      "source": "80snyc",
      "source-layer": "landusagesndjson",
      "paint": {
        "fill-color": "black"
      },
      "filter":["in","type","school","university"]
    },
    {
      "id": "building",
      "type": "fill-extrusion",
      "source": "80snyc",
      "source-layer": "buildingsndjson",
      "paint": {
        "fill-extrusion-color": "#d5c6cb",
        "fill-extrusion-height": {
            "type": "identity",
            "property": "height"
        },
        "fill-extrusion-opacity": 0.2
      }
    },
    {
      "id": "roads1-casings",
      "type": "line",
      "source": "80snyc",
      "source-layer": "roadsndjson",
      "paint": {
        "line-width":{
          "stops":[
            [14,3],
            [17,8]
          ]
        },
        "line-color": "black"
      },
      "filter":["all",["in","type","motorway","motorway-link"],["==","tunnel",0]],
      "minzoom":14
    },
    {
      "id": "roads1",
      "ref":"roads1-casings",
      "paint": {
        "line-width":{
          "stops":[
            [14,2],
            [17,8]
          ]
        },
        "line-color": "#362630"
      }
    },
    {
      "id": "roads2-casings",
      "type": "line",
      "source": "80snyc",
      "source-layer": "roadsndjson",
      "paint": {
        "line-width":{
          "stops":[
            [14,3],
            [17,8]
          ]
        },
        "line-color": "black"
      },
      "filter":["in","type","primary","primary-link","secondary","secondary-link","tertiary","tertiary-link"],
      "minzoom":14
    },
    {
      "id": "roads2",
      "ref":"roads2-casings",
      "paint": {
        "line-width":{
          "stops":[
            [14,2],
            [17,8]
          ]
        },
        "line-color": "#362630"
      }
    },
    {
      "id": "railways-casings",
      "type": "line",
      "source": "80snyc",
      "source-layer": "roadsndjson",
      "paint": {
        "line-width":{
          "stops":[
            [14,4],
            [17,6]
          ]
        },
        "line-color": "#111"
      },
      "filter":["all",["in","type","rail","subway"],["!=","service","siding"]],
      "minzoom":14
    },
    {
      "id": "railways",
      "ref":"railways-casings",
      "paint": {
        "line-width":{
          "stops":[
            [14,2],
            [17,3]
          ]
        },
        "line-color": "#333",
        "line-dasharray":[1,1]
      }
    },
    {
      "id": "filmstrips",
      "type": "line",
      "source": "80snyc",
      "source-layer": "filmstripsndjson",
      "paint": {
        "line-color": "white",
        "line-width":{
          "stops":[
            [14,1.5],
            [18,4]
          ]
        }
      },
      "layout":{
        "line-cap":"round"
      },
      "minzoom":14
    },
    {
      "id": "filmstrips-highlight",
      "type": "line",
      "source": "80snyc",
      "source-layer": "filmstripsndjson",
      "paint": {
        "line-color": "white",
        "line-width":20,
        "line-opacity":0.5,
        "line-blur":10
      },
      "layout":{
        "line-cap":"round"
      },
      "filter":["==","id",""]
    },
    {
      "id": "roads_labels",
      "type": "symbol",
      "source": "80snyc",
      "source-layer": "roadsndjson",
      "layout": {
        "text-field": "{name}",
        "text-font": [
          "Open Sans Light"
        ],
        "text-size":13,
        "symbol-placement":"line"
      },
      "paint":{
        "text-color":"#eee",
        "text-halo-color":"#22181e",
        "text-halo-width":2.2
      },
      "minzoom":14
    },
    {
      "id": "parks_labels",
      "type": "symbol",
      "source": "80snyc",
      "source-layer": "landusagesndjson",
      "layout": {
        "text-field": "{name}",
        "text-font": [
          "Open Sans Light"
        ],
        "text-size":11
      },
      "paint":{
        "text-color":"white",
        "text-halo-color":"#22181e",
        "text-halo-width":1.0
      },
      "minzoom":14,
      "filter":["in","type","park"]
    },
    {
      "id":"stories-selected",
      "type":"circle",
      "source":"stories",
      "paint": {
        "circle-radius": 22,
        "circle-color": "#fbdd96",
        "circle-opacity":0.5
      },
      "filter":["==","id","-1"]
    },
    {
      "id":"stories",
      "type":"symbol",
      "source":"stories",
      "layout": {
        "icon-image":"story_{id}",
        "icon-size":{
          "stops":[
            [14,0.5],
            [18,1]
          ]
        }
      }
    },
    {
      "id":"viewPosition-halo",
      "type":"circle",
      "source":"viewPosition",
      "paint": {
        "circle-radius": 12,
        "circle-color": "#fbdd96",
        "circle-opacity":0.5
      }
    },
    {
      "id":"viewPosition",
      "ref":"viewPosition-halo",
      "paint": {
        "circle-radius": 6,
        "circle-color": "#fbdd96"
      }
    }
  ]
}
