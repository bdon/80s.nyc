{
  "version":8,
  "name": "80s.nyc",
  "pitch": 0,
  "light": {
  "anchor": "viewport",
  "color": "white",
  "intensity": 0.3
  },
  "sprite":"http://80s.nyc/images/atlas",
  "sources": {
    "80snyc": {
      "type": "vector",
      "tiles":["https://80s-nyc.nyc3.digitaloceanspaces.com/80snyc_tiles/{z}/{x}/{y}.pbf"],
      "minzoom":13,
      "maxzoom":14,
      "attribution":"Â© <a href=\"https://www.openstreetmap.org\" target=\"_blank\"> OpenStreetMap</a> contributors"
    },
    "stories": {
      "type":"geojson",
      "data":{
        "type":"FeatureCollection",
        "features":[]
      }
    },
    "viewPosition": {
      "type":"geojson",
      "data":{
        "type":"FeatureCollection",
        "features":[]
      }
    }
  },
  "glyphs": "https://80s-nyc.nyc3.digitaloceanspaces.com/fonts/{fontstack}/{range}.pbf",
  "transition": {
    "duration": 300,
    "delay": 0
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "black"
      }
    },
    {
      "id": "filmstrips",
      "type": "line",
      "source": "80snyc",
      "source-layer": "filmstripsndjson",
      "paint": {
        "line-color": "#357EDD",
        "line-width":{
          "stops":[
            [14,1.5],
            [18,4]
          ]
        },
        "line-opacity":0.75
      },
      "layout":{
        "line-cap":"round"
      },
      "minzoom":14
    },
    {
      "id": "filmstrips-highlight",
      "type": "line",
      "source": "80snyc",
      "source-layer": "filmstripsndjson",
      "paint": {
        "line-color": "#96CCFF",
        "line-width":20,
        "line-opacity":0.75,
        "line-blur":10
      },
      "layout":{
        "line-cap":"round"
      },
      "filter":["==","id",""]
    },
    {
      "id":"stories-selected",
      "type":"circle",
      "source":"stories",
      "paint": {
        "circle-radius": 22,
        "circle-color": "#fbdd96",
        "circle-opacity":0.5
      },
      "filter":["==","id","-1"]
    },
    {
      "id":"stories",
      "type":"symbol",
      "source":"stories",
      "layout": {
        "icon-image":"story_{id}",
        "icon-size":{
          "stops":[
            [14,0.5],
            [18,1]
          ]
        }
      }
    },
    {
      "id":"viewPosition-halo",
      "type":"circle",
      "source":"viewPosition",
      "paint": {
        "circle-radius": 12,
        "circle-color": "#fbdd96",
        "circle-opacity":0.5
      }
    },
    {
      "id":"viewPosition",
      "ref":"viewPosition-halo",
      "paint": {
        "circle-radius": 6,
        "circle-color": "#fbdd96"
      }
    }
  ]
}
